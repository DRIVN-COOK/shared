{
  "name": "@drivn-cook/shared",
  "version": "1.1.0",
  "type": "module",

  "main": "dist/index.js",
  "types": "dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./context/*": {
      "types": "./dist/context/*.d.ts",
      "import": "./dist/context/*.js"
    },
    "./api": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.js"
    }
  },

  "files": ["dist"],

  "scripts": {
    "build": "tsc -p tsconfig.json"
  },

  "dependencies": {
    "axios": "^1.11.0"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.23",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
